{
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "compilerOptions": {
    "target": "ES6",
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "node_modules"
  ],
  "extends": [
    "eslint:recommended"
  ],
  "plugins": [
    "import",
    "node",
    "promise"
  ],
  "env": {
    "browser": true,
    "node": true,
    "jasmine": true,
    "es6": true
  },
  "globals": {
    "angular": true,
    "inject": true,
    "protractor": true,
    "browser": true,
    "element": true,
    "by": true,
    "createSpy": true,
    "triggerDigests": true,
    "stopDigests": true
  }
}
